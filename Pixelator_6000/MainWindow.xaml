<Window x:Class="Pixelator_6000.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pixelator_6000"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="250*"/>
            <RowDefinition Height="119*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="337*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="341*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="imageBefore" Margin="10,10,10,10" Grid.Column="0" Grid.Row="0"/>
        <Image x:Name="imageAfter" Margin="10,10,10,10" Grid.Column="2" Grid.Row="0"/>
        
        <GridSplitter Width="14" HorizontalAlignment="Left" ResizeBehavior="PreviousAndNext" ResizeDirection="Columns" Margin="0" Grid.Column="1"/>
        
        <Image Grid.Column="2" Margin="10,10,10,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
