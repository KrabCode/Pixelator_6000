<Window x:Class="Pixelator_6000.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pixelator_6000"
        mc:Ignorable="d"
        Title="Pixelator 6000" Height="657.595" Width="1076.603">
    <Grid Margin="0,0,0,0" x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="385*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="108*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="gridImages" Margin="0" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="337*"/>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="341*"/>
            </Grid.ColumnDefinitions>
            <Image x:Name="imageBefore" Margin="10" Grid.Column="0" Grid.Row="0"/>
            <Image x:Name="imageAfter" Margin="10" Grid.Column="2" Grid.Row="0"/>

            <GridSplitter HorizontalAlignment="Stretch" ResizeBehavior="PreviousAndNext" ResizeDirection="Columns" Grid.Column="1"/>

            <Image Grid.Column="2" Margin="10,10,10,0" VerticalAlignment="Top"/>

        </Grid>

        <GridSplitter HorizontalAlignment="Stretch" Grid.Row="1" ResizeDirection="Rows" ResizeBehavior="PreviousAndNext"/>

        <Grid x:Name="gridControlPanel" Margin="0" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="211*"/>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="717*"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="gridEffectTypeSelector" Margin="10" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
            </Grid>
            <GridSplitter HorizontalAlignment="Stretch" ResizeBehavior="PreviousAndNext" ResizeDirection="Columns" Grid.Column="1"/>

            <Image Grid.Column="2" Margin="10,10,10,0" VerticalAlignment="Top" Height="0"/>

        </Grid>


    </Grid>
</Window>
